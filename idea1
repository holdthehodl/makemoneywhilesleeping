        plt.ion()
        plt.title("interactive test")
        plt.xlabel("DAYS")
        plt.ylabel("PRICE")
        a = 0
        smareturn = SMA(data,days,width)
        emareturn1 = EMA(data,days,width)
        for each_item in smareturn:
            if a > 0:
                plt.plot([a-1,a],[smareturn[a-1],smareturn[a]])
                plt.plot([a-1,a],[data[a-width-2],data[a-width-1]])
            a = a + 1
        a = 0
        for each_item in emareturn1:
            if a > 0:
                plt.plot([a,a+1],[emareturn1[a-1],emareturn1[a]])
            a = a + 1
        print("Good to go!")
